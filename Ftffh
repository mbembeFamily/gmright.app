data {

int<lower=1> N;

real X[N];

vector[N] Y;

}

transformed data {

vector[N] mu = rep_vector(0, N);

}

parameters {

real<lower=0> rho;

real<lower=0> scale;

real<lower=0> sigma;

}

model {

matrix[N, N] L_K;

matrix[N, N] K = cov_exp_quad(X, scale, rho);

real sq_sigma = square(sigma);

for (n in 1:N) K[n,n] = K[n,n] + sq_sigma;

L_K = cholesky_decompose(K);

rho ~ inv_gamma(5, 5);

scale ~ std_normal();

sigma ~ std_normal();

Y ~ multi_normal_cholesky(mu, L_K);

}

